#---------------------------------------------------------------------
# Example configuration for a possible web application.  See the
# full configuration options online.
#
#   http://haproxy.1wt.eu/download/1.4/doc/configuration.txt
#
#---------------------------------------------------------------------

#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global
    # to have these messages end up in /var/log/haproxy.log you will
    # need to:
    #
    # 1) configure syslog to accept network log events.  This is done
    #    by adding the '-r' option to the SYSLOGD_OPTIONS in
    #    /etc/sysconfig/syslog
    #
    # 2) configure local2 events to go to the /var/log/haproxy.log
    #   file. A line like the following can be added to
    #   /etc/sysconfig/syslog
    #
    #    local2.*                       /var/log/haproxy.log
    #
    log         127.0.0.1 local2

    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon

    # turn on stats unix socket
    stats socket /var/lib/haproxy/stats

# common defaults that all the 'listen' and 'backend' sections will
# use if not designated in their block
#---------------------------------------------------------------------
defaults
    mode                    tcp
    log                     global
    option                  tcplog
    option                  dontlognull
    retries                 5
    timeout queue           10m
    timeout connect         60s
    timeout client          1500s
    timeout server          1500s
    timeout check           40s
    maxconn                 6000

#---------------------------------------------------------------------
# main frontend which proxys to the backends
#---------------------------------------------------------------------
frontend  frontend-api-1 169.63.244.89:6443
    default_backend             api-1

frontend  frontend-api-2 169.63.244.90:6443
    default_backend             api-2

frontend frontend-api-3 169.63.244.91:6443
    default_backend             api-3

frontend  frontend-apps-1 169.63.244.89:443
    default_backend             apps-1

frontend  frontend-apps-2 169.63.244.90:443
    default_backend             apps-2

frontend  frontend-apps-3 169.63.244.91:443
    default_backend             apps-3


# backend for serving internal ocp services
#---------------------------------------------------------------------
backend api-1
    balance     roundrobin
    option tcp-check
        timeout server 300000
    server      static 192.168.200.30:6443 check

backend apps-1
    balance     roundrobin
    option tcp-check
        timeout server 300000
    server      static 192.168.200.32:443 check

backend api-2
    balance     roundrobin
    option tcp-check
        timeout server 300000
    server      static 192.168.200.160:6443 check

backend apps-2
    balance     roundrobin
    option tcp-check
        timeout server 300000
    server      static 192.168.200.162:443 check

backend api-3
    balance     roundrobin
    option tcp-check
        timeout server 300000
    server      static 192.168.200.170:6443 check

backend apps-3
    balance     roundrobin
    option tcp-check
        timeout server 300000
    server      static 192.168.200.172:443 check



listen stats # Define a listen section called "stats"
  bind :8404 # Listen on localhost:9000
  mode http
  stats enable  # Enable stats page
  stats hide-version  # Hide HAProxy version
  stats realm Haproxy\ Statistics  # Title text for popup window
  stats uri /haproxy_stats  # Stats URI
  #stats auth Username:Password  # Authentication credentials
